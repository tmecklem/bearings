<div class="container daily-list">
  <div class="row border-bottom border-light">
    <h4 class="col-12 text-light my-3 text-center">Daily Plans</h4>
  </div>

  <%= for week <- calendar(@dailies) |> Enum.chunk_every(7, 7) do %>
    <div class="row border-bottom border-light">
      <%= for calendar_day = {day, dailies} <- week do %>
        <div class="<%= daily_card_class(calendar_day) %>">
          <div class="text-light text-center py-2">
            <%= Timex.format!(day, "%b %d", :strftime) %>
            <%= if Enum.empty?(dailies) do %>
            <% end %>
          </div>
          <%= if Enum.count(dailies) > 0 do %>
            <%= for daily <- dailies do %>
              <%= link to: daily_path(@conn, :show, daily.owner.username, daily), "data-test": "daily" do %>
                <%= img_tag "#{daily.owner.avatar}&size=120", class: "avatar" %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="row my-2">
    <div class="col-12">
      <%= unless Map.has_key?(@conn.assigns, :supporter) do %>
        <%= link "Plan a New Day", to: daily_path(@conn, :new, @conn.assigns.current_user), class: "btn btn-light float-right" %>
      <% else %>
        <% inspect @conn.assigns.supporter %>
      <% end %>
    </div>
  </div>
</div>

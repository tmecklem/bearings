<div class="row px-3">
  <%= if @previous_daily do %>
    <div class="daily px-0 mt-0 mt-lg-4 px-3 col-lg-6 d-none d-lg-block">
      <%= render "daily.html", Map.put(assigns, :daily, @previous_daily) %>
    </div>
  <% end %>
  <div class="daily-form px-0 mt-0 mt-md-4 px-3 col-lg-6">
    <h3 class="text-primary">Edit Daily Plan</h3>
    <%= render "form.html", Map.put(assigns, :action, daily_path(@conn, :update, @conn.assigns.current_user, @daily)) %>
  </div>
</div>
